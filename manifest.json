{
  "name": "CloudCrypt",
  "version": "1.1",
  "description": "A dropbox cryptor data",
  "permissions": [
    "storage",
    "file://*",
    "downloads",
    "tabs",
	"https://dropbox.com/*"
  ],
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
	  "css": [ "css/bootstrap.css", "css/Style.css" ],
      "js": [ "content.js", "CryptoJS.js" ]
    }
  ],
  "browser_action": {
      "default_title": "Cloud Crypt",
      "default_icon": "images/icon.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
